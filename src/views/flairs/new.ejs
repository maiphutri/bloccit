<!DOCTYPE html>
<html>
<head>
  <% include ../static/partials/head.ejs %>
</head>
<body>
  <% include ../static/partials/navbar.ejs %>

  <main class='container'>
    <h1>New Flair</h1>

    <form action="/topics/<%= topicId %>/flairs/create" method="post">
      <div class="form-group">
        <label for="name">Flair Name</label>
        <input 
          type="text"
          name="name"
          class="form-control"
          aria-describedby="nameHelp"
          placeholder="Enter Flair Name"
        >
      </div>
      <div class='form-group'>
        <label for="color">Flair Color</label>
        <input 
          type="color" 
          class="form-control"
          name="color"
          placeholder="Enter Flair Color"
        >
      </div>
      <button type='submit' class='btn btn-primary'>Submit<button>
    </form>
  </main>
  
  <% include ../static/partials/baseScripts.ejs %>
</body>
</html>